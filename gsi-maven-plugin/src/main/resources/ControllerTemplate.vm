package ${package}.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import ${package}.model.domain.${entityName};
import ${package}.model.domain.dto.${entityName}DTO;
import ${package}.service.${entityName}Service;
import ${package}.data.repository.${entityName}Repository;


#include("comments.vm")

@Controller
@RequestMapping("/api/v1/$entityName.substring(0, 1).toLowerCase()$entityName.substring(1)")
public class ${entityName}Controller {

	@Autowired
	private ${entityName}Service<${entityName}DTO, ${entityName}, Long> service;
	
	@Autowired
    private ${entityName}Repository dataRepository;	
	
	@ResponseBody
	@RequestMapping(path="/find/all", method = RequestMethod.GET)
	public ResponseEntity<Iterable<${entityName}DTO>> findAll() {
		return new ResponseEntity<Iterable<${entityName}DTO>>(this.service.findAll(), HttpStatus.OK);
	}
	
	@ResponseBody
	@RequestMapping(path = "/save", method = RequestMethod.POST)
	public ResponseEntity<${entityName}DTO> save(${entityName}DTO dto) {
		this.service.save(dto);
		return new ResponseEntity<${entityName}DTO>(HttpStatus.OK);
	}
	
	@ResponseBody
	@RequestMapping(path = "/find/one", method = RequestMethod.GET)
	public ResponseEntity<${entityName}DTO> findOne(Long id) {
		return new ResponseEntity<${entityName}DTO>(this.service.findOne(id), HttpStatus.OK);
	}
	
	@ResponseBody	
	@RequestMapping(path = "/delete", method = RequestMethod.DELETE)
	public ResponseEntity<Boolean> delete(Long id) {
		this.dataRepository.delete(id);
		return new ResponseEntity(Boolean.TRUE, HttpStatus.OK);
	}

}